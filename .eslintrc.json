{
    "env": {
        "browser": false,
        "es6": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "settings": {
        "react":{
            "version":"detect"
        }
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": false
        },
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "import/no-named-as-default-member": "off",
        "react/jsx-filename-extension" : "off",
        "react/destructuring-assignment": "off",
        "react/prop-types": "off",
        "react/no-unescaped-entities": "off"
    }
}